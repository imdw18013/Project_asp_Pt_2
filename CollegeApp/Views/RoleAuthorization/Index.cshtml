@model IEnumerable<CollegeApp.Entities.RoleAuthor>

@{
    ViewData["Title"] = "Role List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title " style="float:left">Roles</h4>
            <a asp-action="Create" class="btn btn-primary " style="margin-bottom:10px;float:right">Create New</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RoleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccessPages)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccessPages)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit </a> |
                                <a asp-action="Delete" class="btndeletes btndelete_@item.ID" asp-route-id="@item.ID">Delete </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<script>
    $(".btndeletes").click(function () {
        var id = $(this).attr("data-deleteid");
        if (confirm('Are you sure you want to delete this role? All Users are deleted as well who is associated with this role')) {
            return true;
        }
        else {
            return false;
        }
        
    })
</script>