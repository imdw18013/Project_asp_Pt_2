@model CompanyApp.Entities.Department

@{
    ViewData["Title"] = "Create Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Department</h4>
            <p class="card-description">Please enter Department Details </p>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label"></label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input id="checkboxStatus" type="text" asp-for="Status" style="display: none" />
                    <label><input type="checkbox" id="statusLabel"></label>
                </div>

                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Back to List</a>
            </form>
        </div>
    </div>
</div>
<script>
    if ($("#checkboxStatus").val() == "True") {
        $("#statusLabel").prop("checked", true);
    }
    else {
        $("#statusLabel").prop("checked", false);
    }
    $('#statusLabel').on('change', function () {
        debugger
        if ($(this).is(":checked")) {
            $('#checkboxStatus').val('True');
        } else {
            $('#checkboxStatus').val('False');
        }
    });
</script>

